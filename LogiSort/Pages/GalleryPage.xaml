                <Grid>
                    <Image Source="pack://application:,,,/Plug/Plug1.png" Stretch="UniformToFill"/>
                </Grid>
            </Border>
            <Border Width="150" Height="150" Margin="8" Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8">
                <Grid>
                    <Image Source="pack://application:,,,/Plug/Plug1.png" Stretch="UniformToFill"/>
                </Grid>
            </Border>
            <Border Width="150" Height="150" Margin="8" Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8">
                <Grid>
                    <Image Source="pack://application:,,,/Plug/Plug1.png" Stretch="UniformToFill"/>
                </Grid>
            </Border>
            <Border Width="150" Height="150" Margin="8" Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8">
                <Grid>
                    <Image Source="pack://application:,,,/Plug/Plug1.png" Stretch="UniformToFill"/>
                </Grid>
            </Border>
            <Border Width="150" Height="150" Margin="8" Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8">
                <Grid>
                    <Image Source="pack://application:,,,/Plug/Plug1.png" Stretch="UniformToFill"/>
                </Grid>
            </Border>
            <!-- Пример видео -->
            <Border Width="150" Height="150" Margin="8"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    CornerRadius="8"
                     >
                <Grid>
                    <Image Source="pack://application:,,,/Plug/Plug1.png" Stretch="UniformToFill"/>
