                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="PlayCircle" Width="48" Height="48"
                                                 Foreground="White" />
                    </StackPanel>
                </Grid>
            </Border>

        </WrapPanel>
    </ScrollViewer>
</UserControl>